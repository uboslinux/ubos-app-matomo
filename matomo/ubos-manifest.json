{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/matomo",
            "depends" : [
                "php",
                "php-apache",
                "php-gd",
                "smtp-server"
            ],
            "apache2modules" : [
                "php7"
            ],
            "phpmodules" : [
                "gd",
                "iconv",
                "mysqli",
                "pdo_mysql"
            ],
            "appconfigitems" : [
                {
                    "type" : "directorytree",
                    "names" : [
                        "config",
                        "core",
                        "js",
                        "lang",
                        "libs",
                        "misc",
                        "node_modules",
                        "plugins",
                        "tests",
                        "vendor",
                        "CHANGELOG.md",
                        "console",
                        "CONTRIBUTING.md",
                        "DIObject.php",
                        "index.php",
                        "LegacyAutoloader.php",
                        "LEGALNOTICE",
                        "LICENSE",
                        "matomo.js",
                        "matomo.php",
                        "offline-service-worker.js",
                        "piwik.js",
                        "piwik.php",
                        "PRIVACY.md",
                        "README.md",
                        "SECURITY.md"
                    ],
                    "source" : "$1",
                },
                {
                    "type" : "directorytree",
                    "names" : [
                        "matomo.js",
                        "piwik.js"
                    ],
                    "source" : "$1",
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}"
                },
                {
                    "type" : "directory",
                    "name" : "${appconfig.datadir}"
                },
                {
                    "type" : "directory",
                    "name" : "${appconfig.cachedir}"
                },
                {
                    "type"  : "directory",
                    "names"  : [
                        "${appconfig.cachedir}/tmp",
                        "${appconfig.cachedir}/tmp/cache"
                    ],
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}"
                },
                {
                    "type"   : "symlink",
                    "name"   : "tmp",
                    "source" : "${appconfig.cachedir}/tmp"
                },
                {
                    "type"         : "file",
                    "name"         : "${appconfig.apache2.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"   : "perlscript",
                    "source" : "bin/generate-config.pl"
                },
                {
                    "type"         : "file",
                    "name"         : "/etc/systemd/system/matomo-archive@${appconfig.appconfigid}.service",
                    "template"     : "tmpl/matomo-archive@.service.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "systemd-timer",
                    "name"         : "matomo-archive@${appconfig.appconfigid}"
                }
            ],
            "installers" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/init-db.pl"
                },
                {
                    "type"   : "perlscript",
                    "source" : "bin/upgrade.pl"
                }
            ],
            "upgraders" : [
                {
                    "type"   : "perlscript",
                    "source" : "bin/upgrade.pl"
                }
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"       : "database",
                    "name"       : "maindb",
                    "retentionpolicy"  : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges" : "index, create, create temporary tables, select, insert, update, delete, alter, lock tables, drop"
                }
            ]
        }
    },
    "customizationpoints" : {
        "salt" : {
            "type"        : "string",
            "required"    : false,
            "private"     : true,
            "internal"    : true,
            "default" : {
                "expression" : "${randomHex(32)}"
            }
        }
    }
}
